<p><%= image_tag @movie.movie_poster.url(:medium) %></p>

<strong>Title:</strong>
<%= @movie.title %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>
<p>
  <strong>Rated:</strong>
  <%= @movie.rated %>
</p>
<p>
  <strong>Duration:</strong>
  <%= @movie.duration %>
</p>
<p>
  <strong>Synopsis:</strong>
  <%= @movie.synopsis %>
</p>

<% @genres.each do |genre| %>
<p><%= link_to genre.title, movie_genre_path(@movie, genre) %></p>
<%= genre.description %>
<% end %>
<%= link_to "Add Genre", new_movie_genre_path(@movie) %>